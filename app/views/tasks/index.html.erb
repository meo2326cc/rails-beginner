<div class="container mx-auto px-4 py-8">
  <h2 class="text-3xl font-bold mb-6 text-center text-gray-800">任務清單</h2>

  <!--flash-->
<% if flash[:notice] %>
  <div class="bg-green-200 p-4 rounded-sm mb-4"><%= flash.notice %></div>
<% end %>

  <%= link_to "新增任務" , new_task_path , class: 'inline-block bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded mb-4' %>

  <div class="overflow-x-auto bg-white rounded-md shadow overflow-y-auto">
    <table class="border-collapse table-auto w-full whitespace-no-wrap bg-white table-striped relative">
      <thead>
        <tr class="text-left">
          <th class="bg-gray-100 sticky top-0 border-b border-gray-200 px-6 py-3 text-gray-600 font-bold tracking-wider uppercase text-xs">標題</th>
          <th class="bg-gray-100 sticky top-0 border-b border-gray-200 px-6 py-3 text-gray-600 font-bold tracking-wider uppercase text-xs">內容</th>
          <th class="bg-gray-100 sticky top-0 border-b border-gray-200 px-6 py-3 text-gray-600 font-bold tracking-wider uppercase text-xs">操作</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @task.each do |table_item| %>
          <tr>
            <td class="border-t border-gray-200 px-6 py-4"><%= table_item.task_name %></td>
            <td class="border-t border-gray-200 px-6 py-4"><%= table_item.description %></td>
            <td class="border-t border-gray-200 px-6 py-4">
              <%= link_to "編輯", task_path(table_item) , class: "bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded "%>
              <%= link_to '刪除', task_path(table_item) ,
              data: {turbo_method: :delete, turbo_confirm: '確定刪除？'} , class: "bg-red-500 hover:bg-red-500 text-white py-2 px-4 rounded " %>
              
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>